<script type="text/javascript">
    $(document).ready(function () {
    });

    var Click = 3;
    $(document.body).on("click", "#loadMoreMale", function () {
        var user_ID = window.localStorage.getItem("USER_ID");
        jQuery.ajax({
            url: '/Product/LoadMoreProduct',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            data: { CateID: 1, numberClick: Click },

            success: function (result) {
                if (result.status) {
                    if (result.quantity > 0) {
                        Click++;
                        var html = '';
                        $.each(result.data, function (key, item) {
                            html += '<div class="col l-3 m-6 c-6">';
                            html += '<div class="product_item">';
                            if (item.Quantity <= 0) {
                                html += '<a href="/Product/ShowProduct_Id/' + item.Product_ID + '" class="OutOfStock">Out of stock</a>'
                            }
                            html += '<a href="/Product/ShowProduct_Id/' + item.Product_ID + '" class="product_img" title="Nhấn vào để xem chi tiết">';
                            html += '<img src="/image/' + item.Image + '" alt="">';
                            html += '</a>';
                            html += '<p class="product_description">';
                            html += '<a href="/Product/ShowProduct_Id/' + item.Product_ID + '" class="product_description_link"> ' + item.Product_Name + '</a>';
                            html += '</p>';
                            html += '<p class="product_price">' + item.Price.toLocaleString() + ' VNĐ</p>';
                            html += '<div class="Add_To_Cart">';
                            if (item.Quantity > 0) {
                                if (result.Check == "Customer") {
                                    html += '<div>';
                                    html += '<a onclick="AddProductFavorite(' + item.Product_ID + ',' + user_ID + ')" title="Yêu thích" class="icon_heart_' + item.Product_ID + '">';
                                    html += '<i class="fas fa-heart icon_cart icon_cart_favorite"></i>';
                                    html += '</a>';
                                    html += '<a onclick="return AddProduct(' + item.Product_ID + ')" title="Thêm vào giỏ hàng">';
                                    html += '<i class="fas fa-cart-plus icon_cart icon_cart_add"></i>';
                                    html += '</a>';
                                    html += '<a href="/Product/ShowProduct_Id/' + item.Product_ID + '" title="Nhấn vào để xem chi tiết">';
                                    html += '<i style="font-size:21px;" class="fa-solid fa-circle-info icon_cart icon_cart_info"></i>';
                                    html += '</a>';
                                    html += '</div>';
                                }
                                else {
                                    html += '<div style="justify-content:space-evenly">';
                                    html += '<a onclick="return AddProduct(' + item.Product_ID + ')" title="Thêm vào giỏ hàng">';
                                    html += ' <i class="fas fa-cart-plus icon_cart icon_cart_add"></i>';
                                    html += '</a>';
                                    html += '<a href="/Product/ShowProduct_Id/' + item.Product_ID + '" title="Nhấn vào để xem chi tiết">';
                                    html += '<i style="font-size:21px;" class="fa-solid fa-circle-info icon_cart icon_cart_info"></i>';
                                    html += '</a>';
                                    html += '</div>';
                                }
                            }
                            html += '</div>';
                            html += '</div>';
                            html += '</div>';
                        });

                        $('#rowMale').append(html);
                    }
                    if (result.quantity < 4) {
                        $('#loadMoreMale').css("display", "none");
                    }
                }
                else {
                    alert("Failed");
                }
            },
            error: function (result) {
                alert(result.responseText);
            }
        });
    });
</script>
