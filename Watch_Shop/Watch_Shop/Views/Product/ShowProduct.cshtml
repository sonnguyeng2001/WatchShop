@using Watch_Shop.Models;
@model List<Product>
@{
    ViewBag.Title = "Watch Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var male = (List<Watch_Shop.Models.Product>)ViewBag.Watch_Male;
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
<div class="content grid wide">
    <div class="Clock_Content">
        <h2 class="Clock_Topic">Đồng hồ nam</h2>
        <div class="Clock_Line"></div>
        <div class="row" id="rowMale">
            @{
                foreach (var item in male)
                {
                    <div class="col l-3 m-6 c-6">
                        <div class="product_item" id="Product_Item_@item.Product_ID">
                            @if (item.Quantity <= 0)
                            {
                                    <a href="@Url.Action("ShowProduct_Id","Product", new { @id = item.Product_ID})" class="OutOfStock">Out of stock</a>
                            }
                            <div class="product_img">
                                <img src="@Url.Content("~/image/"+item.Image)" alt="">
                            </div>
                            <p class="product_description">
                                <a href="@Url.Action("ShowProduct_Id","Product", new { @id = item.Product_ID})" class="product_description_link">@item.Product_Name</a>
                            </p>
                            <p class="product_price">@string.Format("{0:#,##0.}", item.Price) VNĐ</p>
                            <div class="Add_To_Cart">
                                @if (item.Quantity > 0)
                                {
                                    if (Session["Username"] != null && Session["Username"].ToString() != "admin")
                                    {
                                        <div>
                                            <a onclick="AddProductFavorite(@item.Product_ID,@int.Parse(Session["User_ID"].ToString()))" title="Yêu thích" class="icon_heart_@item.Product_ID">
                                                <i class="fas fa-heart icon_cart icon_cart_favorite"></i>
                                            </a>
                                            <a onclick="return AddProduct(@item.Product_ID)" title="Thêm vào giỏ hàng">
                                                <i class="fas fa-cart-plus icon_cart icon_cart_add"></i>
                                            </a>
                                            <a href="@Url.Action("ShowProduct_Id","Product", new { @id = item.Product_ID})" title="Nhấn vào để xem chi tiết">
                                                <i style="font-size:21px;" class="fa-solid fa-circle-info icon_cart icon_cart_info"></i>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="justify-content:space-evenly">
                                            <a onclick="return AddProduct(@item.Product_ID)" title="Thêm vào giỏ hàng">
                                                <i class="fas fa-cart-plus icon_cart icon_cart_add"></i>
                                            </a>
                                            <a href="@Url.Action("ShowProduct_Id","Product", new { @id = item.Product_ID})" title="Nhấn vào để xem chi tiết">
                                                <i style="font-size:21px;" class="fa-solid fa-circle-info icon_cart icon_cart_info"></i>
                                            </a>
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
        <h2 style="text-align:center;font-size:16px;" id="loadMoreMale">Xem thêm sản phẩm...</h2>
    </div>
</div>


